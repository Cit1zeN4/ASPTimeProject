@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "About";
}


<div class="container-fluid main-block d-flex align-items-center justify-content-center">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-center">
                <div class="col-4">
                    <div class="block">
                        <img src="~/Content/img/clock.png" class="img-thumbnail" />
                    </div>
                </div>
            </div>
            <h4 class="text-center mt-4"><strong>Зафиксируйте свою активность</strong></h4>
        </div>
    </div>
</div>
<div class="white container-fluid main-block d-flex align-items-center justify-content-center">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-center">
                <div class="col-4">
                    <div class="block">
                        <img src="~/Content/img/statistics.png" class="img-thumbnail" />
                    </div>
                </div>
            </div>
            <h4 class="text-center mt-4"><strong>Оцените результаты и станьте лучше</strong></h4>
        </div>
    </div>
</div>
<div class="black container-fluid main-block d-flex align-items-center justify-content-center">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center"><strong>Контролируйте<br />свое время иначе!</strong></h1>
            <div class="d-flex justify-content-center mt-3">
                <a class="ref-button" href="@Url.Action("Register", "Account")"><h1 class="text-center">Начать</h1></a>
            </div>
        </div>
    </div>
    
</div>

@section Style {
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
    <link href="~/Content/homeAbout.css" rel="stylesheet" />
}

