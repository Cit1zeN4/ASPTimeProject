@model ASPTime.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}


<div class="container main-block d-flex align-items-center justify-content-center">
    <div class="card shadow-lg">
        <div class="card-body">
            <h3 class="card-title text-center">@ViewBag.Title</h3>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-row">
                    <div class="col-sm-12 mt-3">
                        @Html.LabelFor(m => m.UserName, new { @for = "validation1" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "validation1", placeholder = "Имя пользователя" })
                    </div>
                    <div class="col-sm-12 mt-3">
                        @Html.LabelFor(m => m.Email, new { @for = "validation2" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "validation2", placeholder = "E-mail" })
                    </div>
                    <div class="col-6 col-sm-12 mt-3">
                        @Html.LabelFor(m => m.Password, new { @for = "validation3" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "validation3", placeholder = "Пароль" })
                    </div>
                    <div class="col-6 col-sm-12 xs-6 mt-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @for = "validation4" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "validation4", placeholder = "Подтвердите пароль" })
                    </div>
                </div>
                <div class="col-sm-12 d-flex align-items-center justify-content-center">
                    <button class="btn btn-primary mt-3" type="submit">Зарегистрироваться</button>
                </div>
                <div class="col-sm-12 d-flex align-items-center justify-content-center">
                    @Html.ActionLink("Уже есть аккаунт?", "Login", null, new { @class = "mt-3" })
                </div>
            }
        </div>
    </div>
</div>


@section Style {
    <link href="~/Content/accountRegister.css" rel="stylesheet" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
