@using ASPTime.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
}

@section ActionIcon{
    <div class="time">
        <div>
            <a href="@Url.Action("Index", "Home")" class="time-link">
                <h3 class="text-left"><i class="far fa-clock"></i></h3>
            </a>
        </div>
    </div>
}

<div class="container main-block d-flex align-items-center justify-content-center">
    <div class="card shadow-lg">
        <div class="card-body">
            <h3 class="card-title text-center">Sign In</h3>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-row">
                    <div class="col-sm-12 mt-3">
                        @Html.LabelFor(m => m.UserName, new { @for = "validation1" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "validation1", placeholder = "User name" })
                    </div>
                    <div class="col-sm-12 mt-3">
                        @Html.LabelFor(m => m.Password, new { @for = "validation2" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "validation2", placeholder = "Password" })
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <div class="col-sm-12 d-flex align-items-center justify-content-center">
                    <button class="btn btn-primary mt-3" type="submit">Sign In</button>
                </div>
                <div class="col-sm-12 d-flex align-items-center justify-content-center">
                    @Html.ActionLink("No account? Sign Up", "Register", null, new { @class = "mt-3" })
                </div>
            }
        </div>
    </div>
</div>

@section Style{
    <link href="~/Content/accountLogin.css" rel="stylesheet" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}